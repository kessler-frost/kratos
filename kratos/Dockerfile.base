FROM ollama/ollama

# Install system dependencies in one layer
RUN apt update && apt upgrade -y && apt install -y curl && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Add uv to PATH
ENV PATH="/root/.local/bin:$PATH"

# Create working directory
RUN mkdir -p /workdir
WORKDIR /workdir

# Initialize uv project and install common dependencies
RUN uv init
RUN uv add ollama agno cloudpickle

# Pre-install common agent dependencies
RUN uv add ddgs duckduckgo-search yfinance youtube-transcript-api

# Set the default command to serve ollama
CMD ["serve"]